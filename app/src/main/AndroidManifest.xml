<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xchange">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Glitters"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".PlayersData"
            android:label="Players Details"
            android:theme="@style/AppTheme1"/>
        <activity
            android:name=".AdminList"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".Afterbooking"
            android:label="My Bookings"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".ViewPass"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".Afterlogin"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".Signup"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>