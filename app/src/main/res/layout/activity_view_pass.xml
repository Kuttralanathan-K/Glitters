<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:orientation="vertical"
    android:padding="8dp"
    android:theme="@style/AppTheme1"
    tools:context=".ViewPass">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"

        android:orientation="vertical"
        android:elevation="20dp"
        app:layout_constraintCircleRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="cursive"
            android:text="Play Pass"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="52sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginEnd="8dp"
                android:text="Name"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/passname1"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="8dp"
                android:background="#85B2D5"
                android:textStyle="bold"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/passdate1"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:background="#85B2D5"
                android:textStyle="bold"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:text="Time"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/passtime1"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:background="#85B2D5"
                android:textStyle="bold"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:text="Players"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/passplay1"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:background="#85B2D5"
                android:textStyle="bold"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:text="Total"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/passcost1"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:background="#85B2D5"
                android:ems="10"
                android:inputType="textPersonName"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:backgroundTint="#fff"
        android:text="PAY (UPI)"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>